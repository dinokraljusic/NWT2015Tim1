      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   '#' %></li>
      <!--  <li><%= link_to "Help",   '#' %></li>-->
        <% if logged_in? %>
            <li class="button-nav"> <%= button_to "Log out", logout_path, :method => "delete", :class => "button" %></li>
        <% else %>
            <li><a href="#login"> Login </a></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<!--<a href="#/allUsers"> All Users </a>-->

<%= yield %>

<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end -%>

</body>
</html>
