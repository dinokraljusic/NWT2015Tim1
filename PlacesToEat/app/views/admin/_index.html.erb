<div ng-controller="adminController">
    <table id="admin_left" class="table admin-list">
      <tr>
        <td> <button class="btn btn-default btn-restaurant-left" ng-click="usersClick()">{{'USERS' | translate}}</button> </td>
      </tr>
      <tr>
        <td> <button class="btn btn-default btn-restaurant-left" ng-click="statsClick()">{{'STATS' | translate}}</button> </td>
      </tr>
    </table>
    <div id="admin_right">
      <div ng-show="showUsers">
        <table class="table table-striped table-hover">
          <tr> <th> {{'NAME' | translate}}</th> <th>{{'LAST_NAME' | translate}}</th> <th>{{ 'EMAIL' | translate}}</th> <!--<td>{{ 'SIGN_IN_COUNT' | translate}}</td>--> <th>{{ 'ROLE_ID' | translate}}</th> <th>{{ 'DELETE_USER' | translate}}</th></tr>
            <tr ng-repeat="user in users">
              <td>{{user.name}}</td>
              <td>{{user.lastname}}</td>
              <td>{{user.email}}</td>
              <!--<td>{{user.sign_in_count}}</td>-->
              <td>{{user.role_id}}</td>
              <td> <button class="glyphicon glyphicon-remove" ng-click="deleteUser(user)"></button> </td>
            </tr>
        </table>
      </div>
      <div ng-show="showStats">
        {{'STATS_TO_DISPLAY' | translate}}
        <select  ng-model="selectedItem" ng-change="selectChange()" ng-init="selectedItem='signups'">
          <option value="signups" selected="selected">{{'USER_SIGNUP_FREQ' | translate}}</option>
          <option value="rating_history">{{'RATING_HISTORY' | translate}}</option>
          <option value="number_of_logins">{{'NUMBER_LOGINS' | translate}}</option>
          <option value="nesto">{{'SOMETHING' | translate}}</option>
        </select>
        {{'GRAPH_COLOUR' | translate}}
        <select  ng-model="selectedItem" ng-change="selectChange()" ng-init="selectedItem='signups'">
          <option value="blue" selected="selected">{{'BLUE' | translate}}</option>
          <option value="grey">{{'GREY' | translate}}</option>
          <option value="red">{{'RED' | translate}}</option>
          <option value="orange">{{'ORANGE' | translate}}</option>
        </select>
        <div>
          <canvas id="line" class="chart chart-line" data="data"
                  labels="labels" legend="true" series="series"
                  options="options"
                  click="onClick">
          </canvas>
        </div>
      </div>

    </div>
</div>